<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_toast"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fundo_principal_login"
        android:scaleType="centerCrop"
    />

    <ImageView
        android:layout_height="249dp"
        android:layout_width="292dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/fundo_branco_login"
    />

    <LinearLayout
        android:layout_height="160dp"
        android:layout_width="198dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="132dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_carmaix_login"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5" />

        <EditText
            android:id="@+id/edtLogin"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:hint="Login"
            android:textColor="@color/tab_cinza"
            android:textSize="11sp"
            android:layout_gravity="center_horizontal"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_cinza"
            android:hint="Senha"
            android:textSize="11sp"
            android:layout_gravity="center_horizontal"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnLogar"
            android:layout_width="59dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:textSize="9sp"
            android:layout_marginRight="4dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/branco"
            android:text="@string/btn_logar" />

    </LinearLayout>

    <ImageView
        android:layout_width="57dp"
        android:layout_height="33dp"
        android:src="@drawable/powered"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="15dp"
    />

</FrameLayout>


