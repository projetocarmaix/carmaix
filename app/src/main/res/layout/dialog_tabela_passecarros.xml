<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="500dp"
    android:paddingTop="10dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingBottom="10dp">
    <ImageView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/tabela_passecarros"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_default"
        android:padding="3dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/spinner_dialog_categoria"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" />

        <ProgressBar
            android:id="@+id/progressbar_categoria"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:visibility="visible"
        />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_default"
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/spinner_dialog_marca"
            android:layout_width="match_parent" />

        <ProgressBar
            android:id="@+id/progressbar_marca"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_default"
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/spinner_dialog_modelo"
            android:layout_width="match_parent" />

        <ProgressBar
            android:id="@+id/progressbar_modelo"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_default"
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/spinner_dialog_combustivel"
            android:layout_width="match_parent" />

        <ProgressBar
            android:id="@+id/progressbar_combustivel"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_default"
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/spinner_dialog_ano"
            android:layout_width="match_parent" />

        <ProgressBar
            android:id="@+id/progressbar_ano"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="gone"
            android:id="@+id/text_dialog_valor_medio"
            android:textColor="@color/branco"
            android:background="@color/tab_vermelha" />

        <ProgressBar
            android:id="@+id/progressbar_valormedio"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>